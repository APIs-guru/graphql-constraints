{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
    "pretty": true,
    "types": [
      "node",
      "webpack",
      "mocha",
      "chai"
    ],
    "lib": ["es2016", "es2017"]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".tmp",
    "lib"
  ],
  "include": [
    "./tests/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "useWebpackText": true
  }
}
